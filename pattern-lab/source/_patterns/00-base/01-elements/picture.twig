<picture>
  {% if picture.srcDesktop %}
  <source media="(min-width: 1024px)" srcset="{{ picture.srcDesktop }}">
  {% endif %}
  {% if picture.srcTablet %}
  <source media="(min-width: 768px)" srcset="{{ picture.srcTablet }}">
  {% endif %}
  {% if picture.src %}
  <img src="{{ picture.src }}" alt="{{ picture.alt }}">
  {% endif %}
</picture>