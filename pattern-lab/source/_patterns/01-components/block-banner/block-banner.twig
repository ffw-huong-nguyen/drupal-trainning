<div class="block-banner">
  <div class="block-banner__background">
    {{ blockBanner.bgImage }}
  </div>
  <div class="block-banner__wrap container">
    <div class="block-banner__inner clearfix">
      <div class="block-banner__left">
        <h1 class="block-banner__title">
          {{ blockBanner.title }}
        </h1>
        <div class="block-banner__description">
          {{ blockBanner.description }}
        </div>
        <div class="block-banner__form">
          {{ blockBanner.form }}
        </div>
        <div class="block-banner__links">
          <span class="tag text--uppercase">New</span>
          {{ blockBanner.link }}
        </div>
      </div>
      <div class="block-banner__right">
        {{ blockBanner.sliders }}
      </div>
    </div>
  </div>
</div>
